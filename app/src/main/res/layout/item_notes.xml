<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/ColorLightBlack"
        android:padding="@dimen/_5sdp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_height="wrap_content"
                android:id="@+id/imgNote"
                android:layout_width="match_parent"
                app:riv_corner_radius_top_right="@dimen/_10sdp"
                app:riv_corner_radius_top_left="@dimen/_10sdp"
                android:visibility="gone"
                android:adjustViewBounds="true"/>

        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:textColor="@color/ColorWhite"
                android:fontFamily="@font/manrope_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/my_notes"
                android:textSize="@dimen/_15ssp" tools:ignore="RtlSymmetry"/>

        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tvWebLink"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                android:textColor="@color/ColorGray"
                android:fontFamily="@font/manrope_bold"
                android:textSize="@dimen/_12ssp"
                android:autoLink="web"
                android:textColorHint="@color/ColorGray"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:textColor="@color/ColorText"
                android:fontFamily="@font/manrope_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/my_notes"
                android:textSize="@dimen/_11ssp"
                android:paddingBottom="@dimen/_5sdp" tools:ignore="RtlSymmetry"/>

        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:textColor="@color/ColorText"
                android:fontFamily="@font/manrope_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/my_notes"
                android:textSize="@dimen/_9ssp"
                android:paddingBottom="@dimen/_5sdp" tools:ignore="RtlSymmetry"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>